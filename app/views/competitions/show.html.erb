<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @competition.name %>
</p>

<p>
  <strong>Date:</strong>
  <%= date_range @competition.start_date, @competition.end_date, format: :long %>
</p>

<p>
  <strong>Association:</strong>
  <%= @competition.local_comp_association %> (<%= @competition.comp_association %>)
</p>

<p>
  <strong>Location Name:</strong>
  <%= @competition.location_name %>
</p>

<p>
  <strong>Location:</strong>
  <%= @competition.location %>
</p>

<p>
  <strong>Website:</strong>
  <%= link_to @competition.website, @competition.website_full, :target => '_blank' %>
</p>

<% if user_signed_in? %>
<%= link_to 'Edit', edit_competition_path(@competition) %> |
<%= link_to 'Back', competitions_path %>
<% end %>
