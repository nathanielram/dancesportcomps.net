<p id="notice"><%= notice %></p>

<%= render 'login_logout' %>

<%= link_to "Past Competitions", past_competitions_path %>
<%= link_to "Future Competitions", future_competitions_path %>

<h1>Dancesport Competitions</h1>

<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Association</th>
      <th>Location Name</th>
      <th>Location</th>
      <th>Website</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @competitions.each do |competition| %>
      <tr>
        <td><%= competition.name %></td>
        <td><%= date_range competition.start_date, competition.end_date, format: :long %></td>
        <td><%= competition.local_comp_association %> (<%= competition.comp_association %>)</td>
        <td><%= competition.location_name %></td>
        <td><%= competition.location %></td>
        <td><%= link_to competition.website, competition.website_full, :target => '_blank' %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Show', competition %></td>
        <td><%= link_to 'Edit', edit_competition_path(competition) %></td>
        <td><%= link_to 'Destroy', competition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
<%= link_to 'New Competition', new_competition_path %>
<% end %>

<%= javascript_tag do %>
  $(function() {


    var mapStyle = [
      // http://snazzymaps.com/
    ];


    handler = Gmaps.build('Google');
    handler.buildMap({ 
      internal: {id: 'map'},
      provider: {
        zoom:      1,
        //center:    new google.maps.LatLng(53.385873, -1.471471),
        mapTypeId: google.maps.MapTypeId.ROADMAP,
        styles:    mapStyle
      }
    }, 
    function(){
      var markers = handler.addMarkers(<%= @markers.to_json.html_safe %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
    });


  });
<% end %>