<div id="header">
  <%= render 'login_logout' %>

  <%= link_to "Past Competitions", past_competitions_path %>
  <%= link_to "This Year's Competitions", competitions_path %>
  <%= link_to "Future Competitions", future_competitions_path %>
</div>

<h1>Dancesport Competitions</h1>

<%= form_tag(@search_path, :method => :post, :class => 'search_form') do %>
  <%= text_field_tag :location, params[:location], placeholder: "Where do you live?", class: "search_input location" %>
  <%= text_field_tag :distance, params[:distance], placeholder: "How far away?", class: "search_input distance" %>
  <%= select_tag :comp_association, options_for_select(['WDC', 'WDSF', 'Collegiate', 'Independent']), include_blank: true, class: "search_select association" %>
  <%= submit_tag "Find", class: "button" %>
<% end %>

<div class="map-container"> <%# flex-video %>
  <div id="map" class="map"></div>
</div>

<div class="table-container">
  <table class="table tablesaw tablesaw-stack" data-tablesaw-mode="stack">
    <thead>
      <tr>
        <th>Name</th>
        <th>Date</th>
        <th>Association</th>
        <th>Location</th>
        <th>Website</th>
      </tr>
    </thead>

    <tbody>
      <% @competitions.each do |competition| %>
        <tr>
          <td><%= link_to competition.name, competition %> <%# competition.name %></td>
          <td><%= date_range competition.start_date, competition.end_date, format: :long %></td>
          <td><%= competition.local_comp_association %></td>
          <td><%= competition.location_name %> <br> <%= competition.location %></td>
          <td><%= link_to competition.website, competition.website_full, :target => '_blank' %></td>
          <% if user_signed_in? && (can? :manage, competition) %>
          <td>
            <%= link_to 'Show', competition %> <br/>
            <%= link_to 'Edit', edit_competition_path(competition) %> <br />
            <%= link_to 'Destroy', competition, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<% if user_signed_in? && (can? :create, Competition) %>
  <%= link_to 'New Competition', new_competition_path %>
<% end %>

<%= javascript_tag do %>
  $(function() {


    var mapStyle = [
      // http://snazzymaps.com/
    ];


    handler = Gmaps.build('Google');
    handler.buildMap({ 
      internal: {id: 'map'},
      provider: {
        zoom:      1,
        //center:    new google.maps.LatLng(53.385873, -1.471471),
        mapTypeId: google.maps.MapTypeId.ROADMAP,
        styles:    mapStyle
      }
    }, 
    function(){
      var markers = handler.addMarkers(<%= @markers.to_json.html_safe %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
    });


  });
<% end %>

